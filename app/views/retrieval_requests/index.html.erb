<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Retrieval Request</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="retrieval_request">
          <thead>
            <tr>
              <th>Request Date</th>
              <th>Box Name</th>
              <th>Status</th>
              <th class="td-actions">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @retrieval_requests.each do |retrieval_request| %>
            <tr>
              <td><%= retrieval_request.created_at.strftime("%d %b, %Y") %></td>
              <td><%= retrieval_request.package.reference_id %></td>
              <td><%= retrieval_request.status %></td>
              <td class="td-actions">

              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

