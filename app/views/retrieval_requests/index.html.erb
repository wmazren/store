<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Retrieval Request</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="retrieval_request">
          <thead>
            <tr>
              <th>Request Date</th>
              <% if current_user.role == "Super User" %>
                <th>Request By</th>
              <% end %>
              <% if current_user.role == "Admin" %>
                <th>Request By</th>
              <% end %>
              <th>Box Name</th>
              <th>Status</th>
              <th class="td-actions">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @retrieval_requests.each do |retrieval_request| %>
            <tr>
              <td><%= retrieval_request.created_at.strftime("%d %b, %Y") %></td>
              <% if current_user.role == "Super User" %>
                <td><%= retrieval_request.user.full_name %></td>
              <% end %>
              <% if current_user.role == "Admin" %>
                <td><%= retrieval_request.user.full_name %></td>
              <% end %>
              <td><%= retrieval_request.package.name %></td>
              <td><%= retrieval_request.state %></td>
              <td class="td-actions">
                <%= link_to "View", retrieval_request_path(retrieval_request), :class => 'btn btn-mini btn-primary'%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

