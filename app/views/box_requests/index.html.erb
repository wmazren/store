<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Box Request</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="retrieval_request">
          <thead>
            <tr>
              <th>Request Date</th>
              <th>Business Unit</th>
              <th>Box Quantity</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% @box_requests.each do |box_request| %>
            <tr>
              <td><%= box_request.created_at.strftime("%d %b, %Y") %></td>
              <td><%= box_request.user.business_unit %></td>
              <td><%= box_request.quantity %></td>
              <td><%= box_request.state %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

