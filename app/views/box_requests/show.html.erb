<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>Box Request</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <p><b>Requested by: </b><%= @box_request.user.full_name %></p>

        <p><b>Request date: </b><%= @box_request.created_at.strftime("%d %b, %Y") %></p>
        <%= link_to "Printable (PDF)", box_request_path(@box_request, format: "pdf"), :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div> <!-- /row -->
