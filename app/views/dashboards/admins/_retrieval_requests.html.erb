<div class="widget widget-table">
  <div class="widget-header">
    <span class="icon-list-alt"></span>
    <h3>Open Retreival Request</h3>
  </div> <!-- .widget-header -->

  <div class="widget-content">

    <div class="accordion" id="basic-accordion">
      <div class="accordion-group">

        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#basic-accordion" href="#collapseThree">Open</a>
        </div>
        <div id="collapseThree" class="accordion-body collapse">
          <div class="accordion-inner">
            <table class="table table-bordered table-striped">
              <thead><tr>
                <th>Request Date</th>
                <th>Box Name</th>
                <th>Status</th>
                <th class="td-actions">Action</th>
              </tr></thead>

              <tbody>
                <% @retrieval_requests_open_admin.each do |retrieval_requests_open_admin| %>
                  <tr>
                    <td><%= retrieval_requests_open_admin.created_at.strftime("%d %b, %Y") %></td>
                    <td><%= retrieval_requests_open_admin.package.reference_id %></td>
                    <td><%= retrieval_requests_open_admin.state %></td>
                    <td class="td-actions">
                      <%= link_to "Edit", edit_retrieval_request_path(retrieval_requests_open_admin), :class => 'btn btn-mini btn-primary' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div> <!-- accordion-group -->
    </div> <!-- accordion -->
  </div> <!-- .widget-content -->
</div> <!-- /widget -->
