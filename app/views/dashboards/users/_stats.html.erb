<div class="row">
  <div class="span12">
    <div class="widget big-stats-container">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>Open Storage Request</h4>
            <span class="value"><%= @storage_requests_open.count %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Open Retrieval Request</h4>
            <span class="value"><%= @retrieval_requests_open.count %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Total Boxes</h4>
            <span class="value"><%= @packages.count %></span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span12 -->
</div> <!-- /row -->
