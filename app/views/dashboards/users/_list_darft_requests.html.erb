<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Storage Requests in 'Draft' Status</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="admin_users">
          <thead>
            <tr>
              <th>Request Date</th>
              <th>Number of Box(s)</th>
              <th>Status</th>
              <th class="td-actions">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @storage_requests.each do |storage_request| %>
            <tr>
              <td><%= storage_request.created_at.strftime("%d %b, %Y") %></td>
              <td><%= pluralize(storage_request.packages.size, "Box") %></td>
              <td><%= storage_request.status %></td>
              <td class="td-actions">
                <%= link_to "View", storage_request_path(storage_request), :class => 'btn btn-mini btn-success' %>
                <%= link_to "Edit", edit_storage_request_path(storage_request), :class => 'btn btn-mini btn-warning' %>
                <%= link_to 'Delete', storage_request, :data => { :confirm => 'Are you sure?' }, method: :delete, :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
