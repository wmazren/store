<fieldset>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#azren">Grandmother Story</a>
    </div>
    <div id="azren" class="accordion-body collapse in">
      <div class="well">
        <%= link_to "Remove Package", '#', class: "remove_fields" %>
        <%= f.input :reference_id, label: 'Package Reference ID:' %>
        <%= f.fields_for :items do |builder| %>
          <%= render 'item_fields', f: builder %>
        <% end %>
        <%= link_to_add_items "Add Items", f, :items %>
        <%= f.hidden_field :_destroy %>
      </div>
    </div>
  </div>
</fieldset>
