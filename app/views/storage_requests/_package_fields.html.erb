<fieldset>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#dyn-id">New Package</a>
    </div>
    <div id="dyn-id" class="accordion-body collapse">
      <div class="well" style="background-color:transparent; border:none; margin-bottom:0px" >
        <%= f.hidden_field :_destroy %>
        <%= link_to "Remove Package", '#', class: "remove_fields" %>
        <%= f.input :reference_id, label: 'Package Reference ID:' %>
        <%= f.fields_for :items do |builder| %>
          <%= render 'item_fields', f: builder %>
        <% end %>
        <%= link_to_add_items "Add Items", f, :items %>

      </div>
    </div>
  </div>
</fieldset>
