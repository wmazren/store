<fieldset>
  <%= f.input :name, :wrapper => :prepend, :label => false do %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= content_tag :span, "Item Name", :class => "add-on" %>
    <%= f.input_field :name, :class => 'span4', :style => "text-transform:uppercase" %>
    <%= f.hidden_field :_destroy %>
    <%= link_to "remove", '#', class: "add-on remove_fields" %>
  <% end %>


</fieldset>
