<div class="row">
  <div class="span4">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>Storage Request <%= @storage_request.id %></h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <p><b>Number of Box(s): </b><%= pluralize(@storage_request.packages.size, "Box") %></p>
      </div>
    </div>
  </div>

  <div class="span8">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-file"></i>
        <h3>Requested Box(s)</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <div class="accordion" id="accordion2">
          <% @storage_request.packages.each do |package| %>
            <div class="accordion-group">
              <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%= package.id %>">
                  <table width="100%"><tr>
                    <td width="20px"><i class="icon-inbox"></td></i><td style="text-align:left"><%= package.reference_id %></td><td style="text-align:right">(<%= pluralize(package.items.size, "Document") %>)</td>
                  </tr></table>
                </a>
              </div>
              <div id="<%= package.id %>" class="accordion-body collapse">
                <div class="accordion-inner">
                 <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
                    <tbody>
                      <% package.items.each_with_index do |item, n| %>
                        <tr>
                          <td width = "5px"><%= n + 1 %></td>
                          <td><%= item.name %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div> <!-- /span-8 -->
</div> <!-- /row -->

<%= link_to 'Edit', edit_storage_request_path(@storage_request) %> |
<%= link_to 'Back to Storage Requests', storage_requests_path %>
