<div class="row">
  <div class="span6">
    <div class="widget big-stats-container stacked">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>Box-In</h4>
            <span class="value"><%= @boxes.sum('quantity') %></span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span6 -->

  <div class="span6">
    <div class="widget big-stats-container stacked">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>box-Out</h4>
            <span class="value">
              <% @boxes.each do |box| %>
                <%= (box.stocks.where(:state => "assigned")).size %>
              <% end %>
            </span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span6 -->
</div> <!-- /row -->
