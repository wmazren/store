<%= render 'stats' %>

<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Boxes Added to Inventory</h3>
      </div> <!-- /widget-header -->
      <div class="widget-content">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="box">
          <thead>
            <tr>
              <th>Date Added</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% @boxes.each do |box| %>
            <tr>
              <td><%= box.created_at.strftime("%d %b, %Y") %></td>
              <td><%= box.quantity %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

