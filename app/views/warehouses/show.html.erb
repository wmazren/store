<div class="row">
  <div class="span12">
    <div class="widget big-stats-container stacked">
      <div class="widget-content">
        <div id="big_stats" class="cf">
          <div class="stat">
            <h4>Total Number of Bays</h4>
            <span class="value"><%= @warehouse.bays.size %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Total Number of Slots (Capacity)</h4>
            <span class="value"><%= @warehouse.slots.size %></span>
          </div> <!-- .stat -->

          <div class="stat">
            <h4>Total Number of Slots (Free)</h4>
            <span class="value"><%= @warehouse.slots.where(:state => "available").size %> (<%= number_to_percentage((@warehouse.slots.where(:state => "available").size).to_f /  @warehouse.slots.size) %>) </span>
          </div> <!-- .stat -->
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span12 -->
</div> <!-- /row -->

<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-briefcase"></i>
        <h3>List Floors</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <div align="right">
          <%= link_to 'Print PDF Report', warehouse_path(@warehouse, format: "pdf"), :class => 'btn' %><br><br>
        </div>
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="">
          <thead>
            <tr>
              <th>Floor</th>
              <th>Bays</th>
              <th>Capacity</th>
              <th>Occupied</th>
              <th>Free</th>
            </tr>
          </thead>
          <tbody>
            <% @warehouse.floors.each do |floor| %>
            <tr>
              <td><%= floor.name %></td>
              <td><%= pluralize(floor.bays.size, "Bay") %></td>
              <td><%= pluralize(floor.slots.size, "Slot") %></td>
              <td><%= pluralize(floor.slots.where(:state => "assigned").size, "Slot") %></td>
              <td><%= pluralize(floor.slots.where(:state => "available").size, "Slot") %> (<%=  number_to_percentage((floor.slots.where(:state => "available").size).to_f / floor.slots.size) %> free)</td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
