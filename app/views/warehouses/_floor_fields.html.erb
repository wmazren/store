<fieldset>
  <div class="accordion-group">
    <div class="accordion-heading">
      <div class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" style="cursor: default">

        <table width="100%">
          <tr width="100%" height="2px">
            <td style="text-align:left " width="90%">
              <%= f.input :name, placeholder: 'Floor Name', :label => false, :input_html => { :class => "span9", :style => "background-color: transparent; border: transparent; margin-bottom: 0px; text-transform:uppercase"} %>
            </td>
            <td style="text-align:right; control-group{margin-bottom: 0px;}" width="10%">
              <a class="icon-chevron-down icon-shadow" data-toggle="collapse" href="#dyn-id" title="Expand/Collapse Floor"></a>
              <%= link_to_add_bays "", f, :bays %>
              <%= f.hidden_field :_destroy %>
              <%= link_to "", '#', class: "icon-remove remove_fields", :title => "Remove Floor" %>
            </td>
          </tr>
        </table>

      </div>
    </div>
    <div id="dyn-id" class="accordion-body collapse">
      <div class="well" style="background-color:transparent; border:none; margin-bottom:0px" >
          <%= f.fields_for :bays do |builder| %>
            <%= render 'bay_fields', f: builder %>
          <% end %>
      </div>
    </div>
  </div>
</fieldset>
