<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="inputs">
    <%= f.input :full_name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :business_unit, :required => true %>
    <%= f.input :role, :required => true, :collection => [ "Super User", "Admin", "User" ], :selected => "member" %>
    <%= f.input :active, :required => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
