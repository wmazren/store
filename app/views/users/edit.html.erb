<%= simple_form_for(@user, :html => { :class => 'form-horizontal' }) do |f| %>
<div class="row">
  <div class="span8">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-pencil"></i>
        <h3>Edit: <%= @user.full_name %></h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#account_details" data-toggle="tab">Account Details</a>
            </li>
            <li><a href="#address" data-toggle="tab">Address</a></li>
          </ul>

          <br>

          <div class="tab-content">
            <div class="tab-pane active" id="account_details">
              <%= f.input :full_name, :required => true, :autofocus => true %>
              <%= f.input :email, :disabled => true %>
              <%= f.input :role, :collection => [ "Super User", "Admin", "User" ] %>
              <%= f.input :active %>
              <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
                                <%= f.input :password_confirmation, :required => false %>
                                <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
            </div>

            <div class="tab-pane" id="address">
              <%= f.input :business_unit, :required => true %>
              <%= f.input :address1, :required => true %>
              <%= f.input :address2, :required => true %>
              <%= f.input :town, :required => true %>
              <%= f.input :postcode, :required => true %>
              <%= f.input :state, :required => true %>
            </div>
          </div>
        </div>
      </div> <!-- /widget-content -->
    </div> <!-- /widget -->
  </div> <!-- /span8 -->

  <div class="span4">
    <div class="widget stacked widget-box">
      <div class="widget-header">
        <i class="icon-file"></i>
        <h3>History</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <p><b>Created At: </b><%= @user.created_at.to_s(:datetime).humanize %></p>
        <p><b>Last Edited At: </b><%= @user.updated_at.to_s(:datetime).humanize %></p>
        <p><b>Login Count: </b><%= @user.sign_in_count %></p>
        <p><b>Last Sign In At: </b><%if @user.last_sign_in_at.blank? %>Never logged in<% else %><%= time_ago_in_words(@user.last_sign_in_at.to_datetime)+' ago' %><% end %></p>
      </div> <!-- /widget-content -->
    </div> <!-- /widget-box -->
  </div> <!-- /span4 -->

  <div class="span4">
    <div class="widget stacked widget-box">
      <div class="widget-header">
        <i class="icon-ok"></i>
        <h3>Actions</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
          <%= f.button :submit, :class => 'btn-primary' %>
          <%= link_to 'Cancel', action: :index, :class => 'btn' %>
      </div> <!-- /widget-content -->
    </div> <!-- /widget-box -->
  </div> <!-- /span4 -->
</div> <!-- /row -->
<% end %>
