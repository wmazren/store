<div class="widget ">
  <div class="widget-header">
    <i class="icon-user"></i>
    <h3>List Users</h3>
  </div> <!-- /widget-header -->

  <div class="widget-content">
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="users">
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Email</th>
          <th>Business Unit</th>
          <th>Role</th>
          <th>Active</th>
          <th class="td-actions">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.full_name, user %></td>
            <td><%= user.email %></td>
            <td><%= user.business_unit %></td>
            <td><%= user.role %></td>
            <td><%= user.active %></td>
            <td class="td-actions">
              <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
              <%= link_to 'Destroy', user, :data => { :confirm => 'Are you sure?' }, method: :delete, :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="form-actions">
      <%= link_to 'Create User', new_user_path, :class => 'btn btn-primary' %>
    </div>
  </div> <!-- /widget-content -->
</div> <!-- /widget -->
