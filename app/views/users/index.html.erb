<div class="row">
  <div class="span12">
    <div class="widget stacked ">
      <div class="widget-header">
        <i class="icon-user"></i>
        <h3>List Users</h3>
      </div> <!-- /widget-header -->

      <div class="widget-content">
        <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#admin" data-toggle="tab">Admin Users</a>
            </li>
            <li><a href="#hq" data-toggle="tab">HQ Users</a></li>
            <li><a href="#branch" data-toggle="tab">Branch Users</a></li>
          </ul>

          <br>

          <div class="tab-content">
            <div class="tab-pane active" id="admin">
              <div class="widget ">
                <div class="widget-header">
                  <i class="icon-user"></i>
                  <h3>List Users</h3>
                </div> <!-- /widget-header -->

                <div class="widget-content">
                  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="users">
                    <thead>
                      <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Business Unit</th>
                        <th class="td-actions">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @users.where(:user_type => "Admin").each do |user| %>
                        <tr>
                          <td><%= link_to user.full_name, user %></td>
                          <td><%= user.email %></td>
                          <td><%= user.business_unit %></td>
                          <td class="td-actions">
                            <%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>

                  <div class="form-actions">
                    <%= link_to 'Create User', new_user_path, :class => 'btn btn-primary' %>
                  </div>
                </div> <!-- /widget-content -->
              </div> <!-- /widget -->
            </div>

